class Solution{
public:
	
	void printTriangle(int n) {
	    for (int row = 0; row < n; row++) {
        for (int col = 0; col < row; col++) {
            cout << " ";
        }
        for (int col = 0; col < 2 * (n - row) - 1; col++) {
            cout << "*";
        }
        cout << endl;
    }
    
	}
};